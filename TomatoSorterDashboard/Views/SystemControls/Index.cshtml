<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Material Design for Bootstrap</title>
    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" />
    <!-- MDB -->
    <link rel="stylesheet" href="~/css/mdb.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h3>System Controls</h3>
    <!-- Toggles -->
    <section class="mb-5">
        <div class="bg-glass shadow-4-strong rounded-6 h-100 p-4">
            <div class="border-bottom mb-4">
                <div class="row align-items-center">
                    <div class="col-6 mb-4 mb-md-0">
                        <p class="text-muted mb-2">Toggles</p>
                    </div>
                </div>
            </div>

            <div class="form-check form-switch mb-2">
                <input class="form-check-input" type="checkbox" id="flexSwitchFeeder" />
                <label class="form-check-label" for="flexSwitchCheckDefault">Feeder</label>
            </div>

            <div class="form-check form-switch mb-2">
                <input class="form-check-input" type="checkbox" id="flexSwitchPower" />
                <label class="form-check-label" for="flexSwitchCheckDefault">Power</label>
            </div>

            <div class="form-check form-switch mb-2">
                <input class="form-check-input" type="checkbox" id="flexSwitchAI" />
                <label class="form-check-label" for="flexSwitchCheckDefault">AI</label>
            </div>
        </div>
    </section>

    </div>

    <script type="text/javascript" src="~/js/mdb.umd.min.js"></script>
    <!-- Custom scripts -->
</body>
</html>